#Program for question 3
#Using Bitwise Operators
print("ques3")
a=56
b=10
print("a&b", a&b)
print("a|b", a|b)
print("a^b", a^b)
print("Shifitng both a and b to the left with 2 bits-" )
print("a>",a<<2)
print("b>",b<<2)
print("Shifting a right by two bits and b by 4 bits-")
print("a>",a>>2)
print("b>",b>>4)

